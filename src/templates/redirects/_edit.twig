{% extends "sprout-seo/_layouts/base" %}
{% import "_includes/forms" as forms %}

{% set title = (redirect.id != "" ? "Edit Redirect"|t('sprout-seo') : "Create a new redirect"|t('sprout-seo')) %}

{% set crumbs = [
    { label: "Redirects"|t('sprout-seo'), url: url('sprout-seo/redirects/' ~ currentSite.handle) }
] %}

{% set fullPageForm = true %}
{% set saveShortcutRedirect = continueEditingUrl %}

{% set selectedItem = currentSite %}

{% block actionButton %}
    <div class="btngroup submit first">
        <input type="submit" class="btn submit" value="{{ 'Save'|t('sprout-seo') }}">
        <div class="btn submit menubtn"></div>
        <div class="menu">
            <ul>
                <li><a class="formsubmit"
                       data-redirect="{{ continueEditingUrl|hash }}">{{ "Save and continue editing"|t('sprout-seo') }}
                        <span class="shortcut">âŒ˜S</span></a></li>
                <li><a class="formsubmit"
                       data-redirect="{{ saveAsNewUrl|hash }}">{{ "Save and add another"|t('sprout-seo') }}</a>
                </li>
                {% if redirect.id is not null %}
                    <hr>
                    <ul>
                        <li><a class="formsubmit error" data-action="sprout-seo/redirects/delete-redirect" data-confirm="{{ 'Are you sure you want to delete this redirect?'|t('sprout-seo') }}" data-redirect="{{ cpUrl('sprout-seo/redirects/' ~ currentSite.handle)|hash }}">{{ "Delete"|t('sprout-base') }}</a></li>
                    </ul>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}

{% block content %}

    <input type="hidden" name="action"
           value="sprout-seo/redirects/save-redirect">
    <input type="hidden" name="redirectId" value="{{ redirect.id }}">
    <input type="hidden" name="redirect"
           value="{{ 'sprout-seo/redirects'|hash }}">

    {% if redirect.id %}
        <input type="hidden" name="redirectId"
               value="{{ redirect.id }}">
    {% endif %}

    <input type="hidden" name="siteId"
           value="{{ currentSite.id }}">

    {% include "sprout-seo/redirects/_fields" %}

{% endblock %}

{% block details %}

    <div class="meta">
        {{ forms.lightswitchField({
            label: "Enabled"|t('sprout-seo'),
            name: 'enabled',
            on: redirect.enabled,
            id: 'enabled',
            first: true
        }) }}
    </div>

    <hr>

    <div class="meta read-only">
        <div class="data">
            <div class="heading">{{ "Site"|t('sprout-base') }}</div>
            <div class="value">{{ redirect.getSite().name }}</div>
        </div>
        <div class="data">
            <div class="heading">{{ "Base URL"|t('sprout-base') }}</div>
            <div class="value">{{ redirect.getSite().baseUrl }}</div>
        </div>
        {% if redirect.id %}
            <div class="data">
                <div class="heading">{{ "Count <span class='info'>The total number of times a redirect has been used.</span>"|t('sprout-base')|raw }}</div>
                <div class="value">{{ redirect.count }}</div>
            </div>
        {% endif %}
    </div>

    <hr>

    <div class="meta">

        <h2>{{ "Regular Expressions"|t('sprout-base') }}</h2>

        <p>{{ "Redirect multiple URLs with a similar pattern by selecting the 'Evaluate regular expressions' option."|t('sprout-base') }}</p>

        <p><strong>{{ "Old URL - Regular Expressions"|t('sprout-base') }}</strong></p>
        <ul>
            <li>{{ "old-location/(.*)"|t('sprout-base') }}</li>
            <li>{{ "old-location/(\\d{4})/(\\d{2})"|t('sprout-base') }}</li>
        </ul>

        <p><strong>{{ "New URL - Capture Groups"|t('sprout-base') }}</strong></p>
        <ul>
            <li><em>{{ "new-location/$1"|t('sprout-base') }}</em></li>
            <li><em>{{ "new-location/$1/$2"|t('sprout-base') }}</em></li>
        </ul>

    </div>
{% endblock %}
